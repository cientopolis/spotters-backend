<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Location</th>
      <th>Heading</th>
      <th>Pitch</th>
      <th>Candidate type</th>
      <th>Owner</th>
      <th>Expert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.status %></td>
        <td><%= candidate.location %></td>
        <td><%= candidate.heading %></td>
        <td><%= candidate.pitch %></td>
        <td><%= candidate.candidate_type %></td>
        <td><%= candidate.owner %></td>
        <td><%= candidate.expert %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

